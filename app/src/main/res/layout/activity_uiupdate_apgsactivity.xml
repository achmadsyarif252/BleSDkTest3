<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ui_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/ui_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Transfer file AGPS"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/is_support_agps_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="1. Apakah akan mendukung AGPS"
                android:textColor="@color/purple_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ui_issupport_agps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Apakah akan mendukung"
                android:textColor="@color/purple_500"
                android:textSize="8sp" />

            <Button
                android:id="@+id/read_base_info_agps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="2. Baca informasi dasar"
                android:textColor="@color/purple_700"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/defalut_img_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/ui_baseinfo_agps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Informasi dasar"
                android:textColor="@color/purple_700"
                android:textSize="8sp" />


            <Button
                android:id="@+id/ui_agps_change_img_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="3.Siapkan AGPS"
                android:textColor="@color/purple_700"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/ui_agps_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Kemajuan: 0%"
                android:textColor="@color/purple_700"
                android:textSize="8sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
